<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dip"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/radius_drawable_bg"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DBDBDB" />
    <LinearLayout
        android:id="@+id/input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/count"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:textSize="16sp"
            android:background="#00000000" />
        <TextView
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:layout_marginStart="117dp"
            android:textSize="16sp"
            android:text="@string/clear"
            android:textColor="#FF0000"
            android:background="#00000000"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DBDBDB" />
    <LinearLayout
        android:id="@+id/input_layout_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:src="@mipmap/code" />
        <TextView
            android:id="@+id/input_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:background="#00000000"
            android:padding="5dip"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DBDBDB" />
    <LinearLayout
        android:id="@+id/input_layout_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:src="@mipmap/comments" />
        <TextView
            android:id="@+id/input_address"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:background="#00000000"
            android:padding="5dip"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/edit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:text="@string/edit"
            android:textColor="#318430"
            android:background="#00000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DBDBDB" />
    <LinearLayout
        android:id="@+id/input_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:layout_marginStart="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/label" />
        <TextView
            android:id="@+id/input_nikeName"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:background="#00000000"
            android:padding="5dip"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:text="@string/edit"
            android:textColor="#318430"
            android:background="#00000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DBDBDB" />
    <LinearLayout
        android:id="@+id/input_layout_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:src="@mipmap/map" />
        <TextView
            android:id="@+id/input_psw"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dip"
            android:background="#00000000"
            android:padding="5dip"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/edit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:text="@string/edit"
            android:textColor="#318430"
            android:background="#00000000"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DBDBDB" />

</LinearLayout>